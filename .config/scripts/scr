#!/usr/bin/env bash

dir="$HOME/Pictures/Screenshots/$(date +'%F')"
file="$(date +'%H-%M-%S')"
image="$dir/$file.png"

screenshot() {
	mkdir -p "$dir"
	if [[ "$screen" ]] ; then
		screencapture -Sc "$image"
	else
		screencapture -ic "$image"
        fi
	pngpaste "$image"
}

flags() {
	while getopts nusdh opt; do
		case $opt in
			s) screen="on"
			;;
			h) echo "-s to capture whole screen"
			;;
			*) echo "-s to capture whole screen"
			;;
		esac
	done
}

if [ "$#" -ne 0 ]; then
	flags "$@"
	screenshot
else
	screenshot
fi
